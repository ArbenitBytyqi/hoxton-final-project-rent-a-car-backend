// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String   @unique
  image    String?
  password String
  reviews  Review[]
}

model Cars {
  id          Int    @id @default(autoincrement())
  name        String
  model       String
  maker       String
  price       Int    @default(1)
  photo       String
  description String
  costToRun   Int
}

model Review {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId    Int
  rating    Int
  content   String
  createdAt DateTime @default(now())
}
